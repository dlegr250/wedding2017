<div class="card full-width">
  <div class="card-header background-color-hover">
    <div class="card-header-primary font-size-normal">
      Guests in Party
    </div>
  </div>
  <div class="card-content">
    <%= f.fields_for :guests, @guests do |guest_form| %>
      <div class="field field-xsmall">
        <div class="field-element">
          <%= guest_form.text_field :first_name, size: 8 %>
          <%= guest_form.text_field :last_name, size: 12 %>
        </div>
      </div>
      <div class="field field-xsmall">
        <div class="field-element">
          <%= guest_form.collection_check_boxes(:alcoholic_beverage_ids, AlcoholicBeverage.alphabetical, :id, :name) do |b| %>
            <div class="checkbox">
              <%= b.check_box %> <%= b.label %>
            </div>
          <% end %>
        </div>
      </div>

      <hr class="divider normal" />
    <% end %>
    <div class="">
      <%= f.submit "Update", class: "button button-raised-primary", id: "update-party-button" %>
      <%= link_to "Cancel", parties_path, class: "button button-flat-grey" %>
    </div>
  </div>
</div>
