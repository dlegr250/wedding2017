<% content_for(:appbar_nav_icon) { up_button(party_path(@party.uuid)) } %>
<% content_for(:appbar_title) { "Edit Party" } %>
<% content_for(:appbar_actions) do %>
  <%= button_tag "Update", class: "button button-raised-white", data: { submit: "#party-form" } %>
<% end %>

<%= form_for @party, url: party_path(@party.uuid), html: { id: "party-form" } do |f| %>
  <div class="card constrained-medium">
    <%= render "authenticated/parties/fields", f: f %>
    <div class="card-actions">
      <%= f.submit "Update", class: "button button-raised-primary", id: "update-party-button" %>
      <%= link_to "Cancel", party_path(@party.uuid), class: "button button-flat-grey" %>
    </div>
  </div>
<% end %>
