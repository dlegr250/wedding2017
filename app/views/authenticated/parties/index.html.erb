<% title "All Parties" %>
<% content_for(:appbar_actions) do %>
  <%= link_to "add", new_party_path, class: "material-icons appbar-button", tooltip: "Invite User", id: "new-user-button", data: { tooltip: "New" } %>
<% end %>

<%= link_to new_party_path, class: "button fab fab-secondary", id: "new-guest-fab", data: { "tooltip-position": "left", tooltip: "New" }, role: "fab" do %>
  <i class="material-icons">add</i>
<% end %>

<% if @parties.any? %>
  <div class="list-subheader">
    A Party is a group of associated Guests
  </div>
  <div class="list list-hoverable list-bordered list-two-lines list-divided rounded-corners background-color-white allow-room-for-fab-at-bottom" id="parties">
    <% @parties.each do |letter, parties| %>
      <div class="list-header">
        <div class="list-header-primary">
          <%= letter %>
        </div>
      </div>
      <%= render parties %>
    <% end %>
  </div>
<% else %>
  <%= render "authenticated/parties/blank_state" %>
<% end %>
