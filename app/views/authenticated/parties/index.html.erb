<% content_for(:appbar_title) do %>
  <span class="menu-container">
    <span class="" role="menu-trigger" data-menu-id="appbar-party-filter-menu">
      Parties
    </span>
    <div class="menu menu-width-2" id="appbar-party-filter-menu" data-position="top-left">
      <div class="menu-item">
        <div class="menu-item-icon">
          <i class="material-icons">people</i>
        </div>
        <div class="menu-item-primary">
          All Parties
        </div>
      </div>
      <div class="menu-item">
        <div class="menu-item-icon">
          <i class="material-icons">people</i>
        </div>
        <div class="menu-item-primary">
          Save the Dates
        </div>
      </div>
      <div class="menu-item">
        <div class="menu-item-icon">
          <i class="material-icons">people</i>
        </div>
        <div class="menu-item-primary">
          Invitations
        </div>
      </div>
    </div>
  </span>
<% end %>

<%= link_to new_party_path, class: "button fab fab-secondary", id: "new-guest-fab", data: { "tooltip-position": "left", tooltip: "New Party" }, role: "fab" do %>
  <i class="material-icons">add</i>
<% end %>

<% if @parties.any? %>
  <div class="list-subheader">
    A Party is a group of associated Guests
  </div>
  <div class="list list-hoverable list-bordered list-two-lines list-divided rounded-corners background-color-white allow-room-for-fab-at-bottom" id="parties">
    <% @parties.each do |letter, parties| %>
      <div class="list-header">
        <div class="list-header-primary">
          <%= letter %>
        </div>
      </div>
      <%= render parties %>
    <% end %>
  </div>
<% else %>
  <%= render "authenticated/parties/blank_state" %>
<% end %>
