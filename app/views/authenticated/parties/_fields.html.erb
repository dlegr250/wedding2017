<div class="card-header no-border-bottom">
  <div class="card-header-primary">
    <div class="field-with-validations text-field-underline-container">
      <%= f.text_field :name, class: "full-width font-size-large", autofocus: true, required: true, placeholder: "Party Name" %>
      <div class="helper-text helper-text-bottom">
        The word "Party" will automatically be added at the end for you
      </div>
      <%= bottom_error_messages_helper @party, :name %>
    </div>
  </div>
</div>
<div class="list list-hoverable">
  <label for="party_save_the_date_sent" class="list-item">
    <div class="list-item-primary">
      <%= f.label :save_the_date_sent, "Save the Date Sent?" %>
    </div>
    <div class="list-item-secondary">
      <div class="switch switch-primary">
        <%= f.check_box :save_the_date_sent %>
        <label for="party_save_the_date_sent"></label>
      </div>
    </div>
  </label>
  <label for="party_invitation_sent" class="list-item">
    <div class="list-item-primary">
      <%= f.label :invitation_sent, "Invitation Sent?" %>
    </div>
    <div class="list-item-secondary">
      <div class="switch switch-primary">
        <%= f.check_box :invitation_sent %>
        <label for="party_invitation_sent"></label>
      </div>
    </div>
  </label>
</div>
<div class="card-content">
  <div class="field-title">
    Mailing Address
  </div>
  <div class="field field-xsmall">
    <%= f.text_area :mailing_address, class: "full-width", rows: 4 %>
  </div>
</div>
