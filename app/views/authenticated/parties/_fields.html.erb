<div class="card-header">
  <div class="card-header-primary field-with-validations">
    <%= f.text_field :name, class: "full-width font-size-large", autofocus: true, placeholder: "Party Name" %>
    <%= bottom_error_messages_helper @party, :name %>
  </div>
</div>
<div class="list list-divided list-hoverable">
  <label for="party_save_the_date_sent" class="list-item">
    <div class="list-item-primary">
      <%= f.label :save_the_date_sent, "Save the Date Sent?" %>
    </div>
    <div class="list-item-secondary">
      <div class="switch switch-primary">
        <%= f.check_box :save_the_date_sent, data: { "auto-submit-on-change" => false } %>
        <label for="party_save_the_date_sent"></label>
      </div>
    </div>
  </label>
  <label for="party_invitation_sent" class="list-item">
    <div class="list-item-primary">
      <%= f.label :invitation_sent, "Invitation Sent?" %>
    </div>
    <div class="list-item-secondary">
      <div class="switch switch-primary">
        <%= f.check_box :invitation_sent, data: { "auto-submit-on-change" => false } %>
        <label for="party_invitation_sent"></label>
      </div>
    </div>
  </label>
</div>
<div class="card-content">
  <div class="field-title">
    Mailing Address
    <div class="field-subtitle">
      For Invitations, Thank You letters, etc.
    </div>
  </div>
  <div class="field field-xsmall">
    <%= f.text_field :address1, class: "full-width", placeholder: "Street Address" %>
  </div>
  <div class="field field-xsmall">
    <%= f.text_field :address2, class: "full-width", placeholder: "Apt, Suite" %>
  </div>
  <div class="field field-xsmall">
    <%= f.text_field :city, size: 15, placeholder: "City" %>
    <%= f.text_field :state, size: 5, placeholder: "State" %>
  </div>
  <div class="field field-xsmall">
    <%= f.text_field :zip, size: 5, placeholder: "Zip" %>
  </div>
</div>
