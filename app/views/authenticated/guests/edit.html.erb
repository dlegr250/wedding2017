<% content_for(:appbar_nav_icon) do %>
  <%= link_to "arrow_back", party_path(@party.uuid), class: "material-icons appbar-button" %>
<% end %>
<% content_for(:appbar_title) do %>
  <%= @party.name %>
  <div class="appbar-subtitle">
    Edit Guest
  </div>
<% end %>
<% content_for(:appbar_actions) do %>
  <%= button_tag "Update", class: "button button-raised-white", data: { submit: "#guest-form" } %>
  <span class="menu-container">
    <i class="material-icons appbar-button" role="menu-trigger" data-menu-id="appbar-menu">more_vert</i>
    <div class="menu menu-width-2" id="appbar-menu" data-position="top-right">
      <%= link_to party_guest_path(@party.uuid, @guest.uuid), method: "DELETE", class: "menu-item disabled", id: "delete-guest-link", data: { "custom-confirm" => { template: "guest-confirm-dialog-template" } } do %>
        <div class="menu-item-icon">
          <i class="material-icons">delete</i>
        </div>
        <div class="menu-item-primary">
          Remove
        </div>
      <% end %>
    </div>
  </span>
<% end %>

<%= form_for @guest, url: party_guest_path(@party.uuid, @guest.uuid), html: { id: "guest-form" } do |f| %>
  <%= render "authenticated/guests/fields", f: f %>
<% end %>
