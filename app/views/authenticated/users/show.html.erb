<% content_for(:appbar_nav_icon) do %>
  <%= link_to "", users_path, class: "zmdi zmdi-arrow-left appbar-button" %>
<% end %>
<% content_for(:appbar_title) { "User" } %>
<% if current_user.admin? %>
  <% content_for(:appbar_actions) do %>
    <%= link_to "", edit_user_path(@user.uuid), class: "zmdi zmdi-edit appbar-button", data: { tooltip: "Edit" } %>
    <%= link_to "", user_path(@user.uuid), class: "zmdi zmdi-delete appbar-button", method: "DELETE", data: { "custom-confirm" => { template: "user-confirm-dialog-template" }, tooltip: "Delete" } %>
    <span class="appbar-divider"></span>
  <% end %>
<% end %>

<div class="card full-width constrained-medium">
  <div class="card-header">
    <div class="card-header-title">
      <% if @user.confirmed? %>
        <%= @user.full_name %>
        <% if @user.admin? %>
          <span class="color-green">&middot; Admin</span>
        <% end %>
      <% else %>
        <em>Invited</em>
      <% end %>
    </div>
  </div>
  <div class="list">
    <div class="list-item">
      <div class="list-item-icon">
        <%= icon "email" %>
      </div>
      <div class="list-item-primary">
        <%= @user.email %>
        <div class="list-item-primary-subtext">
          Email
        </div>
      </div>
    </div>
    <div class="list-item">
      <div class="list-item-icon">
        <%= icon "time" %>
      </div>
      <div class="list-item-primary">
        <%= local_time @user.created_at %>
        <div class="list-item-primary-subtext">
          Created
        </div>
      </div>
    </div>
  </div>
</div>
