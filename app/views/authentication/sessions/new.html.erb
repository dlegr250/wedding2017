<% content_for(:authentication_title) { "Login" } %>

<%= form_tag login_path do %>
  <div class="field field-xsmall">
    <div class="field-label">
      <%= label_tag :email, "Email" %>
    </div>
    <div class="field-element">
      <%= email_field_tag :email, params[:email], class: "full-width", autofocus: true, tabindex: 1 %>
    </div>
  </div>
  <div class="field field-xsmall">
    <div class="field-label">
      <%= link_to "Forgot Password?", new_password_reset_path, class: "float-right", id: "password-reset-link" %>
      <%= label_tag :password, "Password" %>
    </div>
    <div class="field-element">
      <%= password_field_tag :password, nil, class: "full-width", tabindex: 2 %>
    </div>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "button button-raised-primary", id: "login-button", tabindex: 3 %>
  </div>
<% end %>
